class Solution(object):
    
            
    def numIslands(self, grid):
        """
        :type grid: List[List[str]]
        :rtype: int
        """
        def expand (grid, i, j):

            col = len(grid[0])
            row = len(grid)

            if i > row-1 or j > col-1 or i < 0 or j < 0:
                return
            else:
                if grid[i][j] == '0':return
                else:
                    grid[i][j] = '0'
                    expand(grid,i-1,j)
                    expand(grid,i+1,j)
                    expand(grid,i,j-1)
                    expand(grid,i,j+1)
        
        if not grid:return 0
                
        cnt = 0
        col = len(grid[0])
        row = len(grid)
        
        for m in range(row):
            for n in range(col):
                if grid[m][n] == '1':
                    cnt += 1
                    expand(grid,m,n)
                    
        return cnt


    
